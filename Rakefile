  require 'jeweler'
  Jeweler::Tasks.new do |s|
    s.name = "ruby_core_ri"
    s.summary = "A gem to make it possible to have the core ri/rdoc (especially useful if your distro didn't include it)"
    s.email = "rogerdpack@gmail.com"
    s.homepage = "http://github.com/rdp/ruby_core_ri"
    s.authors = ["Roger Pack"]
    s.add_development_dependency 'rspec'
    s.add_development_dependency 'sane'
    s.add_dependency 'backports'
    s.add_dependency 'archive-tar-minitar'
    # hopefully a warning is enough... # s.add_dependency 'rdoc', '> 2.4.3'
    s.post_install_message  = "Please run 
    
    $ ruby_core_ri
    
    To install the docs locally.
    "
    
  end